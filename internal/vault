package vaultUnsealer


// Vault
type vault struct {
    domain string  // The vault domain
    statusUri string // Ths uri used to check the status
    unsealUri string // The uri to send unseal commands to
    sealed bool  // seal status
}

func (v *vault) statusUrl() string {
    return "https://" + v.domain + "/" + v.statusUri
}

func (v *vault) unsealUrl() string {
    return "https://" + v.domain + "/" + v.unsealUri
}


